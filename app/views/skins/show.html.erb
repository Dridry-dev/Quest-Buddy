<div class="container">

<%# ----------------- MENU CARD ----------------- %>

  <div class="card-grey">
    <div class="upper-card-grey">
      <div class="nav-item dropdown deplacer-btn">
        <i class="fa-solid fa-angles-right arrow-color" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <div class="dropdown">
            <%= link_to "Quests", categories_path, class: "btn-dropdown" %>
            <%= link_to "Profil", root_path, class: "btn-dropdown" %>
            <%= link_to "Shop", skins_path, class: "btn-dropdown" %>
          </div>
        </div>
      </div>
      <div class="cellules-skills-coin">
        <i class="fa-solid fa-coins"></i> <p class="coin-count">392</p>
      </div>
      <img class="avatar-grey-card" src="https://file1.closermag.fr/var/closermag/storage/images/bio-people/biographie-ryan-gosling-112720/825706-1-fre-FR/Ryan-Gosling.jpg?alias=square500x500&size=x100&format=jpeg">
    </div>
    <div class="lower-card-grey">
      <h1><%= @skin.name %></h1>
    </div>
  </div>

  <%# ----------------- CARD SKIN----------------- %>

  <div class= "card">
    <%= cl_image_tag @skin.photo.key, height: 100, crop: :fill %>
    <p><%= @skin.description %></p>
    <p><%= @skin.price %></p>

    <%#= link_to 'Acheter', skin_user_skins_path(@skin) %>
    <%#= simple_form_for [@skin, UserSkin.new] do |f| %>
      <%#= f.input :user_id, input_html: {value: current_user.id}, as: :hidden %>
      <%#= f.input :skin_id, input_html: {value: @skin.id}, as: :hidden %>
      <%#= f.input :selected, label: true, as: :hidden %>
      <%#= f.submit "Acheter", class: "yellow-large-btn" %>

    <% if @user_skin %>
      <%= simple_form_for [@skin, @user_skin] do |f| %>
        <%= f.input :user_id, input_html: {value: current_user.id}, as: :hidden %>
        <%= f.input :skin_id, input_html: {value: @skin.id}, as: :hidden %>
        <%= f.input :selected, label: true, as: :hidden %>
        <%= f.submit "Equiper", class: "yellow-large-btn" %>
      <% end %>
    <% else %>
      <%= link_to 'Acheter', skin_user_skins_path(@skin, UserSkin.new), data: { turbo_method: :post }, class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
