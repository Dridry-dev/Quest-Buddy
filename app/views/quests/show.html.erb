<div class="container">

<%# ----------------- MENU CARD ----------------- %>

  <div class="card-grey">
    <div class="upper-card-grey">
      <div class="nav-item dropdown deplacer-btn">
        <i class="fa-solid fa-angles-right arrow-color" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <div class="dropdown">
            <%= link_to "Quests", categories_path, class: "btn-dropdown" %>
            <%= link_to "Profil", root_path, class: "btn-dropdown" %>
            <%= link_to "Shop", skins_path, class: "btn-dropdown" %>
          </div>
        </div>
      </div>
      <div class="cellules-skills-coin">
        <i class="fa-solid fa-coins"></i> <p class="coin-count">392</p>
      </div>
      <img class="avatar-grey-card" src="https://file1.closermag.fr/var/closermag/storage/images/bio-people/biographie-ryan-gosling-112720/825706-1-fre-FR/Ryan-Gosling.jpg?alias=square500x500&size=x100&format=jpeg">
    </div>
    <div class="lower-card-grey">
      <h1><%= @quest.name%></h1>
    </div>
  </div>

<%# ----------------- BOUTON START ----------------- %>
  <div class="yellow-btn-position-fixer-quests-show">
    <span>
      <%= simple_form_for [@quest.category, @quest, UserQuest.new] do |f| %>
        <%= f.input :user_id, input_html: {value: current_user.id}, as: :hidden %>
        <%= f.input :quest_id, input_html: {value: @quest.id}, as: :hidden %>
        <%= f.submit "Start", class: "yellow-large-btn" %>
      <% end %>
    </span>
  </div>

<%# ----------------- CARD SKILLS ----------------- %>

  <div class="card-skills">
    <div class="grid-cellules-skills-quest">
      <div class="cellules-skills">
        <p>Force</p>
      </div>
      <div class="cellules-skills">
        <p>Endu</p>
      </div>
      <div class="cellules-skills">
        <p>Cardio</p>
      </div>
    </div>
    <p><%= @quest.description  %></p>
      <div class="progress">
        <div class="progress-value">
          <div class="dot-spacer">
            <div class="step-dot"></div>
            <div class="step-dot"></div>
            <div class="step-dot"></div>
          </div>
        </div>
      </div>
    </div>

<%# ----------------- CARD TROPHIES ----------------- %>

  <div class="card-trophies">
    <h1>TROPHIES</h1>
    <i class="fa-solid fa-trophy"></i>
  </div>

<%# ----------------- CARD SKINS ----------------- %>

  <%= link_to skins_path do %>
    <div class="card-changing-room">
      <h2>CHANGING ROOM</h2>
      <div class="skins">
        <img class="size-skin" src="https://static1.millenium.org/entity_articles/1/19/31/@/1472156-kassadin-6-article_image_d-1.jpg"  alt="">
      </div>
    </div>
  <% end %>
    <div>
      <%= link_to  "Return", category_path(@quest.category), class: "yellow-small-btn"%>
    </div>
</div>
