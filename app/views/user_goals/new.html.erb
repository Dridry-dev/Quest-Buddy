<div class="container" data-controller="quest-counter"
    data-quest-counter-category-value = <%= @category.id %>
    data-quest-counter-quest-value = <%= @quest.id %>
    data-quest-counter-userquest-value = <%= @user_quest.id %>
    data-quest-counter-threshold-value = <%= @goal.threshold %>
    data-quest-counter-lastgoal-value = <%= @last_goal.threshold %>>
<%# ----------------- MENU CARD BLACK ----------------- %>

  <div class="navbar-card">
    <div class="nav-item dropdown side-nav-btn">
      <i class="fa-solid fa-angles-right arrow-color" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <div class="dropdown">
          <%= link_to "Quests", categories_path, class: "btn-dropdown" %>
          <%= link_to "Profil", root_path, class: "btn-dropdown" %>
          <%= link_to "Changing Room", skins_path, class: "btn-dropdown" %>
        </div>
      </div>
    </div>
    <div>
      <% if current_user.show_selected_skin.nil? %>
      <div class="cat-cont-smol">
        <div class="cat-smol">
          <div class="ear ear--left"></div>
          <div class="ear ear--right"></div>
          <div class="face">
            <div class="eye eye--left">
              <div class="eye-pupil"></div>
            </div>
            <div class="eye eye--right">
              <div class="eye-pupil"></div>
            </div>
            <div class="muzzle"></div>
          </div>
        </div>
      </div>
    <% else %>
      <%= link_to skin_path(current_user.show_selected_skin) do %>
        <%= cl_image_tag current_user.show_selected_skin.photo.key, height: 80, width: 80, crop: :scale, crop: :fill, class: "avatar-navbar" %>
      <% end %>
  <% end %>
    </div>
    <div class="trophy side-nav-btn">
      <i class="fa-solid fa-trophy"></i>
    </div>
  </div>

<%# ----------------- MENU CARD ----------------- %>

  <div class="card-grey-action" data-action="click->quest-counter#clicked">

    <div class="counter" data-quest-counter-target = "div"> Touch </div>
  </div>
  <%= link_to  "STOP", user_quest_path(@quest.user_quests.last), class:"yellow-large-btn"%>
  <div class="card-action-progress">
    <p class="font-bold-large">PROGRESS</p>
    <h2> Your threshold: <%= @last_goal.threshold %> </h2>
    <%= render "progress_bar_2" %>
  </div>
</div>
