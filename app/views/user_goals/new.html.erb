<div class="container">

<%# ----------------- MENU CARD ----------------- %>

  <div class="invisible-card-top-quest">
    <i class="fa-solid fa-angles-right arrow-color" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
    <div class="dropdown-menu dropdown-menu-end test-color-dropdown" aria-labelledby="navbarDropdown">
      <div class="dropdown">
        <%= link_to "Quests", categories_path, class: "btn-dropdown" %>
        <%= link_to "Profil", root_path, class: "btn-dropdown" %>
        <%= link_to "Shop", skins_path, class: "btn-dropdown" %>
      </div>
    </div>
    <div class="cellules-skills-coin">
      <i class="fa-solid fa-coins"></i><p class="coin-count"><%= current_user.gold %></p>
    </div>
    <%= cl_image_tag current_user.show_selected_skin.photo.key, height: 80, width: 80, crop: :scale, crop: :fill, class: "avatar-navbar" %>
  </div>

<%# ----------------- MENU CARD ----------------- %>

  <div class="card-grey-action">
    <h2 class="action-count">3</h2>
    <h2 class="action-count">2</h2>
    <h2 class="action-count">1</h2>
    <h2 class="action-count">GO !</h2>
  </div>

<%# ----------------- MENU CARD ----------------- %>
  <%= link_to  "STOP", category_quest_user_quest_path(@category, @quest, @quest.user_quests.last), class: "yellow-large-btn"%>
  <div class="card-action-progress">
    <p class="font-bold-large">PROGRESS</p>
    <div class="progress">
      <div class="progress-value">
        <div class="dot-spacer">
          <div class="step-dot"></div>
          <div class="step-dot"></div>
          <div class="step-dot"></div>
        </div>
      </div>
    </div>
    <p class="timer-position-fix font-bold-large">TIMER 2:00</p>
  </div>
</div>
